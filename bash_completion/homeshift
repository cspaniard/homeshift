#!/bin/bash

function _homeshift()
{
    local cur opt prev
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[$COMP_CWORD - 1]}"

    # Completion of commands.
    if [[ $COMP_CWORD == 1 ]]; then
        COMPREPLY=( $(compgen -W '
            list list-devices config create restore delete help version
            ' -- "$cur" ) )
        return 0
    fi

    case "${prev}" in
    "--schedule-monthly"|"--schedule-weekly"|"--schedule-daily"|"--schedule-hourly")
        COMPREPLY=( $(compgen -W '
            true false
            ' -- "$cur" ) )
        return 0
        ;;

    "--snapshot-device")
        _filedir
        return 0
        ;;

    esac

    case "${prev}" in
    "--user")
        _allowed_users
        return 0
        ;;

    esac

    opt="${COMP_WORDS[1]}"

    case $opt in
    "create")
        COMPREPLY=( $(compgen -W '
            --user --comments --help --version
            ' -- "$cur" ) )
        return 0
        ;;

    "config")
        COMPREPLY=( $(compgen -W '
            --show --snapshot-device --schedule-monthly --schedule-weekly --schedule-daily --schedule-hourly --help --version
            ' -- "$cur" ) )
        return 0
        ;;

    "restore")
        COMPREPLY=( $(compgen -W '
            --snapshot --help --version
            ' -- "$cur" ) )
        return 0
        ;;

    "delete")
        COMPREPLY=( $(compgen -W '
            --user --snapshot --all --help --version
            ' -- "$cur" ) )
        return 0
        ;;

    "list")
        COMPREPLY=( $(compgen -W '
            --user --all --help --version
            ' -- "$cur" ) )
        return 0
        ;;

    esac
}

complete -F _homeshift homeshift
